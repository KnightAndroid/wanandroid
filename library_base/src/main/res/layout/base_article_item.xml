<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/base_dimen_8"
    android:layout_marginLeft="@dimen/base_dimen_16"
    android:layout_marginRight="@dimen/base_dimen_16"
    android:layout_marginBottom="@dimen/base_dimen_6"
    app:cardCornerRadius="@dimen/base_dimen_6"
    android:foreground="?android:attr/selectableItemBackground"
    >

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/base_dimen_12"
        android:paddingBottom="@dimen/base_dimen_12"
        android:paddingRight="@dimen/base_dimen_8"
        android:paddingLeft="@dimen/base_dimen_8">

        <TextView
            android:id="@+id/base_item_tv_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textColor="@color/base_color_999999"
            android:textSize="@dimen/base_dimen_12"
            android:text="深红骑士"
            />

        <TextView
            android:id="@+id/base_item_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/base_dimen_12"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@color/base_color_999999"
            android:text="一天前"/>


        <ImageView
            android:id="@+id/base_item_imageview"
            android:layout_width="130dp"
            android:layout_height="160dp"
            app:layout_constraintTop_toBottomOf="@id/base_item_tv_author"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/base_dimen_12"
            android:scaleType="centerCrop"
             />

        <TextView
            android:id="@+id/base_tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/base_item_imageview"
            app:layout_constraintLeft_toRightOf="@id/base_item_imageview"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="@dimen/base_dimen_16"
            android:textStyle="bold"
            android:textColor="@color/base_color_title"
            android:text="Android上强盗协程网络请求请求收到"
            android:layout_marginLeft="@dimen/base_dimen_10"
            android:lines="2"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/base_tv_project_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/base_item_imageview"
            app:layout_constraintTop_toBottomOf="@id/base_tv_title"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="@dimen/base_dimen_10"
            android:layout_marginTop="@dimen/base_dimen_12"
            android:textSize="@dimen/base_dimen_12"
            android:textColor="@color/base_color_999999"
            android:lines="3"
            android:ellipsize="end"
            android:lineSpacingExtra="@dimen/base_dimen_4"
            android:text="这是项目描述这是项目描述这是项目是项目描述这是描述是项目描述这是"/>


        <TextView
            android:id="@+id/base_tv_superchapter"
            app:layout_constraintBottom_toBottomOf="@id/base_item_imageview"
            app:layout_constraintLeft_toRightOf="@id/base_item_imageview"
            android:layout_marginLeft="@dimen/base_dimen_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开源自主"
            android:textColor="@color/base_color_999999"
            android:textSize="@dimen/base_dimen_12"/>

        <ImageView
            android:id="@+id/base_article_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/base_tv_superchapter"
            app:layout_constraintTop_toTopOf="@id/base_tv_superchapter"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/base_icon_nocollect"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
