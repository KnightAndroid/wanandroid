<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">



    <ImageView
        android:id="@+id/iv_loading_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/iv_load_empty"/>

    <TextView
        android:id="@+id/tv_no_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/base_no_data"
        android:textSize="@dimen/base_dimen_20"
        android:layout_marginTop="@dimen/base_dimen_4"/>


</LinearLayout>