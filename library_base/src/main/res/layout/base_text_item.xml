<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/base_dimen_16"
    android:layout_marginTop="@dimen/base_dimen_8"
    android:layout_marginRight="@dimen/base_dimen_16"
    android:layout_marginBottom="@dimen/base_dimen_6"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/base_dimen_6">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/base_dimen_8">

        <TextView
            android:id="@+id/base_item_articleauthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base_dimen_8"
            android:layout_marginTop="@dimen/base_dimen_8"
            android:paddingRight="@dimen/base_dimen_8"
            android:text="232323"
            android:textColor="@color/base_color_999999"
            android:textSize="@dimen/base_dimen_text_size_12"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/base_tv_articlesuperchaptername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/base_dimen_8"
            android:background="@drawable/base_articlechapter_type"
            android:paddingLeft="@dimen/base_dimen_4"
            android:paddingTop="@dimen/base_dimen_2"
            android:paddingRight="@dimen/base_dimen_4"
            android:paddingBottom="@dimen/base_dimen_2"
            android:text="广泛他"
            android:textColor="@color/base_color_theme"
            android:textSize="@dimen/base_dimen_text_size_12"
            app:layout_constraintBottom_toBottomOf="@id/base_item_articleauthor"
            app:layout_constraintLeft_toRightOf="@id/base_item_articleauthor"
            app:layout_constraintTop_toTopOf="@id/base_item_articleauthor"/>

        <TextView
            android:id="@+id/base_tv_articletitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base_dimen_8"
            android:layout_marginTop="@dimen/base_dimen_10"
            android:layout_marginRight="@dimen/base_dimen_8"
            android:text="这是标题标题这是标题标题这是标题标题这是标题标题这是标题标题"
            android:textColor="@color/base_color_title"
            android:textSize="@dimen/base_dimen_text_size_16"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/base_item_articleauthor" />

        <TextView
            android:id="@+id/base_item_articledata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base_dimen_8"
            android:layout_marginTop="@dimen/base_dimen_10"
            android:text="一天前"
            android:textColor="@color/base_color_999999"
            android:textSize="@dimen/base_dimen_text_size_12"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/base_tv_articletitle" />


        <ImageView
            android:id="@+id/base_icon_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/base_dimen_8"
            android:background="@drawable/base_icon_nocollect"
            app:layout_constraintBottom_toBottomOf="@id/base_item_articleauthor"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/base_item_articleauthor" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>
