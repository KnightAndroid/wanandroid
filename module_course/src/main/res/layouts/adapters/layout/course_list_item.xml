<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/base_bg_normal_default"
    android:foreground="?android:attr/selectableItemBackground">



    <TextView
        android:id="@+id/course_list_tv_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/base_dimen_16"
        android:layout_marginTop="@dimen/base_dimen_16"
        android:text="深红骑士"
        android:textColor="@color/base_color_999999"
        android:textSize="@dimen/base_dimen_text_size_12"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/course_list_iv_cover"
        android:layout_width="130dp"
        android:layout_height="160dp"
        android:layout_marginStart="@dimen/base_dimen_16"
        android:layout_marginTop="@dimen/base_dimen_10"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/course_list_tv_author"/>


    <TextView
        android:id="@+id/course_tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base_dimen_10"
        android:layout_marginEnd="@dimen/base_dimen_16"
        android:ellipsize="end"
        android:lines="2"
        android:text="Android上协程网络请求请求收到"
        android:textColor="@color/base_color_title"
        android:textSize="@dimen/base_dimen_text_size_16"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/course_list_iv_cover"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/course_list_iv_cover" />


    <TextView
        android:id="@+id/course_list_tv_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base_dimen_10"
        android:layout_marginTop="@dimen/base_dimen_10"
        android:layout_marginEnd="@dimen/base_dimen_16"
        android:ellipsize="end"
        android:lineSpacingExtra="@dimen/base_dimen_4"
        android:lines="3"
        android:text="这是教程描述这是教程描述这是教程是教程描述这是描述是项目描述这是"
        android:textColor="@color/base_color_999999"
        android:textSize="@dimen/base_dimen_text_size_12"
        app:layout_constraintLeft_toRightOf="@id/course_list_iv_cover"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/course_tv_title" />


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/course_list_bottom_view_height"
        android:layout_marginTop="@dimen/course_list_bottom_view_margin_top"
        android:background="@color/base_item_bottom_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/course_list_iv_cover" />

</androidx.constraintlayout.widget.ConstraintLayout>