<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.knight.wanandroid.module_hierachy.module_adapter.HierachyLeftBarAdapter"
    android:id="@+id/hiearchy_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/base_dimen_50"
    android:background="@color/base_bg_normal_default"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/hierachy_tv_selectview"
        android:layout_width="@dimen/base_dimen_16"
        android:layout_height="match_parent"
        />


    <TextView
        android:id="@+id/hierachy_tv_sort"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="基础知识"
        android:textColor="@color/base_color_title"
        android:textSize="@dimen/base_dimen_text_size_14"/>

</LinearLayout>