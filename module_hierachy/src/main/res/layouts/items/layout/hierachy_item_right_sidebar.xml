<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hiearchy_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/base_bg_normal_default"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/hierachy_tv_selectview"
        android:layout_width="@dimen/base_dimen_16"
        android:layout_height="match_parent"
        android:background="#55aff4"/>


    <TextView
        android:id="@+id/hierachy_tv_sort"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="基础知识"
        android:textColor="@color/base_color_title"
        android:textSize="14sp"/>

</LinearLayout>