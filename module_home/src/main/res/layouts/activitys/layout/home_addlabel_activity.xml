<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <data>




    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/include_add_label"
            layout="@layout/base_include_toolbar"/>

        <EditText
            android:id="@+id/home_inputlabel_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/include_add_label"
            android:layout_marginTop="@dimen/base_dimen_20"
            android:hint="@string/home_inputlabel_tip"
            android:textSize="@dimen/base_dimen_16"
            android:layout_marginLeft="@dimen/base_dimen_20"
            android:layout_marginRight="@dimen/base_dimen_20"
            android:textColor="@color/base_color_title"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/home_inputlabel_et"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/base_dimen_5"
            android:background="@color/base_color_theme"
            android:layout_marginRight="@dimen/base_dimen_16"
            android:layout_marginLeft="@dimen/base_dimen_16"/>


        <TextView
            android:id="@+id/home_tv_labelnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_inputlabel_et"
            android:text="0/30"
            android:textSize="@dimen/base_dimen_14"
            android:layout_marginRight="@dimen/base_dimen_16"
            android:layout_marginTop="@dimen/base_dimen_10"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
