<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/base_dimen_8">


    <RelativeLayout
        android:id="@+id/home_rl_knowledge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">



        <TextView
            android:id="@+id/home_tv_knowledge"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textColor="@color/base_color_theme"
            android:textSize="@dimen/base_dimen_16"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="center"
            android:text="sdsdsdsdsd"
            android:background="@drawable/home_hotkeyframe_shape"



            >
        </TextView>


    </RelativeLayout>

    <ImageView
        android:id="@+id/home_iv_moreknowledge_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/widget_label_delete"
        android:layout_alignRight="@id/home_rl_knowledge"
        android:layout_marginRight="-8dp"

        />


</RelativeLayout>