<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:foreground="?android:attr/selectableItemBackground">

        <TextView
            android:id="@+id/home_tv_article_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="@dimen/base_dimen_16"
            android:text="大小厂都问源码，到底有多难"
            android:textSize="@dimen/base_dimen_16"
            android:textColor="@color/home_color333333"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxEms="15"
            />

        <TextView
            android:id="@+id/tv_article_bottomline"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="@dimen/base_dimen_6"
            android:layout_marginRight="@dimen/base_dimen_6"
            android:background="@color/base_color_dddddd"/>

        <TextView
            android:id="@+id/tv_article_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="@dimen/base_dimen_12"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="@dimen/base_dimen_16"
            android:layout_marginBottom="@dimen/base_dimen_6"
            android:textColor="@color/home_color999999"
            />


</androidx.constraintlayout.widget.ConstraintLayout>