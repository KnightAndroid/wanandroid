<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/base_dimen_8"
    android:layout_marginTop="@dimen/base_dimen_8"
    android:layout_marginRight="@dimen/base_dimen_8"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/base_dimen_6">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/base_dimen_8">

        <TextView
            android:id="@+id/message_item_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base_dimen_8"
            android:layout_marginTop="@dimen/base_dimen_8"
            android:paddingRight="@dimen/base_dimen_8"
            android:text="232323"
            android:textColor="@color/base_color_999999"
            android:textSize="@dimen/base_dimen_12"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/message_item_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/base_articlechapter_type"
            android:text="广泛他"
            android:textColor="@color/base_color_theme"
            android:textSize="@dimen/base_dimen_12"
            app:layout_constraintBottom_toBottomOf="@id/message_item_author"
            app:layout_constraintLeft_toRightOf="@id/message_item_author"
            app:layout_constraintTop_toTopOf="@id/message_item_author"
            android:paddingTop="@dimen/base_dimen_2"
            android:paddingBottom="@dimen/base_dimen_2"
            android:paddingLeft="@dimen/base_dimen_4"
            android:paddingRight="@dimen/base_dimen_4"/>


        <TextView
            android:id="@+id/home_item_nicedata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/base_dimen_8"
            android:text="一天前"
            android:textColor="@color/base_color_999999"
            android:textSize="@dimen/base_dimen_12"
            app:layout_constraintBottom_toBottomOf="@id/message_item_author"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/message_item_author" />

        <TextView
            android:id="@+id/message_tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base_dimen_8"
            android:layout_marginTop="@dimen/base_dimen_12"
            android:layout_marginRight="@dimen/base_dimen_8"
            android:text="这是标题标题这是标题标题这是标题标题这是标题标题这是标题标题"
            android:textColor="@color/base_color_title"
            android:textSize="@dimen/base_dimen_16"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/message_item_author" />


        <TextView
            android:id="@+id/message_tv_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base_dimen_8"
            android:layout_marginTop="@dimen/base_dimen_6"
            android:layout_marginRight="@dimen/base_dimen_8"
            android:ellipsize="end"
            android:maxEms="14"
            android:singleLine="true"
            android:text="这是项目描述这是项目描述这是项目描述"
            android:textColor="@color/base_color_999999"
            android:textSize="@dimen/base_dimen_12"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/message_tv_title" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>
