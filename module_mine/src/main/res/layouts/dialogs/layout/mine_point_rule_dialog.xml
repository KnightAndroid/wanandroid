<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.knight.wanandroid.module_mine.dialog.PointRuleDialog">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/base_dimen_20"
            android:layout_marginEnd="@dimen/base_dimen_20"
            android:background="@drawable/base_round"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_title_point_rule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/base_dimen_20"
                android:text="@string/mine_points_rule"
                android:textColor="@color/base_color_title"
                android:textSize="@dimen/base_dimen_text_size_18"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_rule_detail_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_title_point_rule"
                android:layout_marginStart="@dimen/base_dimen_16"
                android:layout_marginEnd="@dimen/base_dimen_16"
                android:layout_marginTop="@dimen/base_dimen_10"
                android:lineSpacingExtra="@dimen/base_dimen_4"
                android:textColor="@color/base_second_title"
                android:text="@string/mine_point_detail_rule"
                 />


        </RelativeLayout>
    </RelativeLayout>
</layout>
