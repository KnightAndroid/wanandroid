<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.knight.wanandroid.module_web.module_fragment.WebBottomFragment">


    <data>


        <variable
            name="click"
            type="com.knight.wanandroid.module_mine.fragment.QuickBottomFragment.ProxyClick" />

    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/base_round"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_fingure_login"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:text="@string/mine_fingure_login"
                android:background="?attr/selectableItemBackground"
                android:textColor="@color/base_color_title"
                android:textSize="@dimen/base_dimen_text_size_16"
                android:onClick="@{()->click.fingureLogin()}"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5px"
                android:background="#dddddd" />
            <TextView
                android:id="@+id/tv_quicklogin_cancel"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:text="@string/mine_cancel"
                android:background="?attr/selectableItemBackground"
                android:textColor="@color/base_color_title"
                android:textSize="@dimen/base_dimen_text_size_16"
                android:onClick="@{()->click.close()}"
               />

        </LinearLayout>

    </RelativeLayout>
</layout>

