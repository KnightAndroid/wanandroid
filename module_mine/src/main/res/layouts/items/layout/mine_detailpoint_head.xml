<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/base_dimen_20">


    <TextView
        android:id="@+id/tv_head_detailpoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="80dp"
        android:textColor="@color/base_color_theme"
        android:textSize="30dp"
        android:text="26336"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_head_detailpoint"
        android:layout_marginTop="@dimen/base_dimen_10"

>

        <TextView
            android:id="@+id/mine_tv_rule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mine_rule"
            android:textColor="#8a8a8a"
            android:textSize="@dimen/base_dimen_16"
            />

        <ImageView
            android:id="@+id/mine_iv_rule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/mine_iv_pointrule"
            android:layout_marginLeft="@dimen/base_dimen_10"
            />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>