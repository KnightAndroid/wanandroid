<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>



    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <com.knight.wanandroid.library_widget.CompatToobar
            android:id="@+id/project_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/project_white">


            <net.lucode.hackware.magicindicator.MagicIndicator
                android:id="@+id/project_indicator"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/base_dimen_40"
                android:theme="@style/base_AppTheme.AppBarOverlay"
                app:layout_scrollFlags="scroll|enterAlways"
                app:popupTheme="@style/base_AppTheme.PopupOverlay"/>


        </com.knight.wanandroid.library_widget.CompatToobar>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/project_view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


    </LinearLayout>

</layout>
