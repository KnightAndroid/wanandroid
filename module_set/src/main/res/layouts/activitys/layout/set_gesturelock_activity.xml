<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.knight.wanandroid.module_set.module_activity.GestureLockActivity"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/include_gesture_toolbar"
            layout="@layout/base_include_toolbar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


        <com.knight.wanandroid.library_widget.GestureLockView
            android:id="@+id/customGestureLockView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginEnd="@dimen/base_dimen_50"
            android:layout_marginStart="@dimen/base_dimen_50"
            android:layout_marginTop="76dp"
            android:padding="0dp"
            app:dot_color_pressed="#55aff4"
            app:dot_pressed_radius="10dp"
            app:dot_radius="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/include_gesture_toolbar"
            app:line_width="12dp"
            app:min_length="4"
            app:row="3" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
