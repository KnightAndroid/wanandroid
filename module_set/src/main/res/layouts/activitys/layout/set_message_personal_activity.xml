<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>


    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/include_personal_message_toolbar"
            layout="@layout/base_include_toolbar"/>

        <!--用户名-->
        <RelativeLayout
            android:id="@+id/rl_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/include_personal_message_toolbar"
            android:layout_marginTop="@dimen/base_dimen_10"
            android:layout_marginLeft="@dimen/base_dimen_26">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/set_user_name"
                android:textColor="@color/base_color_title"
                android:textSize="@dimen/base_dimen_text_size_18" />

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/base_dimen_20"
                android:text="深红骑士" />
        </RelativeLayout>

        <View
            android:id="@+id/set_rl_username_bottom_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_dimen_1"
            android:layout_marginTop="@dimen/base_dimen_10"
            android:background="@color/base_item_bottom_view"
            app:layout_constraintTop_toBottomOf="@id/rl_user_name"/>


        <!--邮箱-->
        <RelativeLayout
            android:id="@+id/rl_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/rl_user_name"
            android:layout_marginTop="@dimen/base_dimen_20"
            android:layout_marginLeft="@dimen/base_dimen_26">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/set_user_email"
                android:textColor="@color/base_color_title"
                android:textSize="@dimen/base_dimen_text_size_18" />

            <TextView
                android:id="@+id/tv_user_eamil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/base_dimen_20"
                android:text="深红骑士"
                />
        </RelativeLayout>

        <View
            android:id="@+id/set_rl_email_bottom_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_dimen_1"
            android:layout_marginTop="@dimen/base_dimen_10"
            android:background="@color/base_item_bottom_view"
            app:layout_constraintTop_toBottomOf="@id/rl_email"/>
        <!--个人积分-->
        <RelativeLayout
            android:id="@+id/rl_coin_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/rl_email"
            android:layout_marginTop="@dimen/base_dimen_20"
            android:layout_marginLeft="@dimen/base_dimen_26">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/set_user_coincount"
                android:textColor="@color/base_color_title"
                android:textSize="@dimen/base_dimen_text_size_18" />

            <TextView
                android:id="@+id/tv_coin_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/base_dimen_20"
                android:text="深红骑士"
                />
        </RelativeLayout>

        <View
            android:id="@+id/set_rl_coin_count_bottom_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_dimen_1"
            android:layout_marginTop="@dimen/base_dimen_10"
            android:background="@color/base_item_bottom_view"
            app:layout_constraintTop_toBottomOf="@id/rl_coin_count"/>
        <!--个人排名-->
        <RelativeLayout
            android:id="@+id/rl_rank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/rl_coin_count"
            android:layout_marginTop="@dimen/base_dimen_20"
            android:layout_marginLeft="@dimen/base_dimen_26">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/set_user_rank"
                android:textColor="@color/base_color_title"
                android:textSize="@dimen/base_dimen_text_size_18" />

            <TextView
                android:id="@+id/tv_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/base_dimen_20"
                android:text="10"
                />
        </RelativeLayout>

        <View
            android:id="@+id/set_rl_rank_bottom_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_dimen_1"
            android:layout_marginTop="@dimen/base_dimen_10"
            android:background="@color/base_item_bottom_view"
            app:layout_constraintTop_toBottomOf="@id/rl_rank"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
