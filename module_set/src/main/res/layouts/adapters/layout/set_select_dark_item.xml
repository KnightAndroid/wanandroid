<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/base_dimen_54">



        <TextView
            android:id="@+id/set_tv_dark_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text=""
            android:textColor="@color/base_color_title"
            android:textSize="@dimen/base_dimen_16" />

        <ImageView
            android:id="@+id/set_iv_select_darkmodel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/base_dimen_10"
            android:src="@drawable/base_select_check" />


        <TextView
            android:id="@+id/set_tv_darkmodel_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_dimen_1"
            android:layout_alignParentBottom="true"
            android:background="@color/base_color_dddddd" />



</RelativeLayout>
