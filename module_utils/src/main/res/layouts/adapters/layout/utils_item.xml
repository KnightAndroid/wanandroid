<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.knight.wanandroid.module_utils.adapter.UtilItemAdapter"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/base_dimen_8"
    android:layout_marginLeft="@dimen/base_dimen_16"
    android:layout_marginRight="@dimen/base_dimen_16"
    android:layout_marginBottom="@dimen/base_dimen_6"
    app:cardCornerRadius="@dimen/base_dimen_6"
    android:foreground="?android:attr/selectableItemBackground"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/base_dimen_8">

        <TextView
            android:id="@+id/utils_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/base_dimen_8"
            android:layout_marginLeft="@dimen/base_dimen_8"
            android:paddingRight="@dimen/base_dimen_8"
            android:text="232323"
            android:textColor="@color/base_color_theme"
            android:textSize="@dimen/base_dimen_text_size_16"/>

        <TextView
            android:id="@+id/utils_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/utils_title"
            android:textSize="@dimen/base_dimen_text_size_16"
            android:layout_marginTop="@dimen/base_dimen_6"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="这是一个开源库这是一个开源库这是一个开源库这是一个开源库这是一个开源库"
            android:layout_marginLeft="@dimen/base_dimen_8"
            android:layout_marginRight="@dimen/base_dimen_8"
            android:textColor="@color/base_color_title"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>